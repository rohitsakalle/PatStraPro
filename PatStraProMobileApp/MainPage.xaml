<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PatStraProMobileApp.MainPage">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
        <Image Source="logo.png" HorizontalOptions="Center" HeightRequest="100" WidthRequest="100" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#2196F3" TextColor="White" CornerRadius="5" Margin="0,20,0,0" />
        <Label x:Name="ConsentLabel" Text="Do you consent to share your data with the healthcare provider?" IsVisible="False" HorizontalTextAlignment="Center" Margin="0,20,0,0" />
        <Button x:Name="ConsentButton" Text="I Consent" IsVisible="False" Clicked="OnConsentClicked" BackgroundColor="#4CAF50" TextColor="White" CornerRadius="5" Margin="0,10,0,0" />
    </StackLayout>

</ContentPage>
